<!--                        android:textColor="@color/blackColor"-->
<!--                        android:paddingLeft="@dimen/five"-->
<!--                        android:hint="@string/email_address"/>-->
<!--                </LinearLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/home_fragments_textview"
                        android:fontFamily="@font/raleway_black"

                        android:gravity="center_vertical|right"
                        android:text="@string/hometown"/>
                    <TextView
                        android:id="@+id/homedown"
                        style="@style/home_fragments_edittext"
                        android:background="@drawable/circleimg"
                        android:paddingRight="@dimen/five"
                        android:paddingLeft="@dimen/five"
                        android:textColor="@color/blackColor"

                        android:hint="@string/hometown"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/home_fragments_textview"
                        android:fontFamily="@font/raleway_black"

                        android:gravity="center_vertical|right"
                        android:text="@string/current_city"/>
                    <TextView
                        android:id="@+id/current_city"
                        style="@style/home_fragments_edittext"
                        android:background="@drawable/circleimg"
                        android:paddingRight="@dimen/five"
                        android:paddingLeft="@dimen/five"

                        android:gravity="center_vertical"
                        android:textColor="@color/blackColor"
                        android:hint="@string/current_city"/>
                </LinearLayout>



