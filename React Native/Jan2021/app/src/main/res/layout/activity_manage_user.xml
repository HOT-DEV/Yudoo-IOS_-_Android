<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageUserActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/ll_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/fifty"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ten"
            android:backgroundTint="@color/whiteColor"
            android:src="@drawable/back"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginRight="0dp"
            android:src="@drawable/urbannetwork_logo1_png" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/invite_group"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:gravity="center"
            android:background="@drawable/switch_button"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tab_user_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_weight="0.2"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="@dimen/three"
                android:text="@string/users"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"

                android:textSize="@dimen/sixteen"
                android:textStyle="bold"
                />
            <RadioButton
                android:id="@+id/tab_join_group_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:layout_marginRight="1dp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="@dimen/sixteen"
                android:textStyle="bold"
                android:padding="@dimen/three"
                android:textAllCaps="false"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/toggle_widget_background"
                android:text="@string/search_group"/>
            <RadioButton
                android:id="@+id/tab_group_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.2"
                android:layout_marginRight="1dp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="@dimen/sixteen"
                android:textStyle="bold"
                android:padding="@dimen/three"

                android:textAllCaps="false"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/toggle_widget_background"
                android:text="@string/my_group"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/one"
        android:orientation="vertical"/>
</LinearLayout>