<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/transparentColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fontFamily">@font/raleway_light</item>
    </style>

    <style name="register_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="register_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fifty</item>
        <item name="android:layout_marginTop">@dimen/seventeen</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/ten</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/login_button_nobgcolor</item>
    </style>

    <style name="register_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="home_status_imageview">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/fifteen</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="home_tab_bar_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/fourty</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">@dimen/ten</item>
        <item name="android:paddingRight">@dimen/ten</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/sixteen</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="home_friends_imageview">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingLeft">@dimen/ten</item>
    </style>

    <style name="infoFragment_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/fourty</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textSize">@dimen/eighteen</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="nav_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fourty</item>
        <item name="android:layout_marginTop">@dimen/ten</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/twenty</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="home_fragments_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/thirty</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/sixteen</item>
        <item name="android:layout_marginRight">@dimen/fifteen</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="home_fragments_edittext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/fourty</item>
        <item name="android:layout_weight">1.7</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/eighteen</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/raleway_black</item>
    </style>

    <style name="home_profile_textview_btn">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingLeft">@dimen/ten</item>
        <item name="android:paddingRight">@dimen/ten</item>
        <item name="android:paddingTop">@dimen/five</item>
        <item name="android:paddingBottom">@dimen/five</item>
        <item name="android:background">@drawable/white_button_blue_border</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/sixteen</item>
    </style>

    <style name="nav_privacy_checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fifty</item>
        <item name="android:textSize">@dimen/twenty</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/ten</item>
    </style>

    <style name="listview_whole_project">
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@color/dividerColor</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
    </style>

    <style name="BottomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogsAnimation</item>
    </style>

    <style name="BottomDialogsAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_dismiss</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DatePickerSpinner">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_roundradius</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/poppins</item>
    </style>
    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">16dp</item>
    </style>
</resources>
