<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/border"
    android:layout_height="match_parent"
    tools:context=".DatingDetailsActivity">
    <RelativeLayout
        android:id="@+id/ll_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/fifty"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ten"
            android:backgroundTint="@color/whiteColor"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thirty_five"
            android:layout_marginLeft="@dimen/five"
            android:layout_margin="@dimen/ten"
            android:gravity="center_vertical"
            android:textColor="@color/whiteColor"
            android:layout_toRightOf="@+id/btn_back"
            android:textStyle="bold"
            android:textSize="@dimen/twenty_five"

            android:text="@string/dating_mode"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/thirty"
            android:src="@drawable/urbannetwork_logo1_png"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_below="@id/ll_top_bar"


        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"

            android:visibility="visible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginBottom="@dimen/five">

                <ImageView

                    android:layout_width="match_parent"
                     android:id="@+id/user_photo"
                    android:layout_height="match_parent"

                    android:src="@drawable/default_head_icon"

                   />
                <!--<ImageView-->
                <!--android:layout_width="68dp"-->
                <!-- android:layout_height="68dp"-->
                <!-- android:src="@drawable/mask_whitecolor"/>-->

            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/ten">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/home_fragments_textview"
                        android:text="@string/username"
                        android:fontFamily="@font/raleway_black"

                        android:gravity="center_vertical|right"
                        />
                    <TextView
                        android:id="@+id/username"
                        style="@style/home_fragments_edittext"
                        android:background="@drawable/circleimg"
                        android:paddingRight="@dimen/five"
                        android:textColor="@color/blackColor"
                        android:paddingLeft="@dimen/five"
                        android:hint="@string/username"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/home_fragments_textview"
                        android:fontFamily="@font/raleway_black"

                        android:gravity="center_vertical|right"
                        android:text="@string/search_name"/>
                    <TextView
                        android:id="@+id/searchname"
                        style="@style/home_fragments_edittext"
                        android:background="@drawable/circleimg"
                        android:paddingRight="@dimen/five"
                        android:textColor="@color/blackColor"
                        android:paddingLeft="@dimen/five"
                        android:hint="@string/search_name"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/five"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/home_fragments_textview"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/raleway_black"

                        android:gravity="center_vertical|right"
                        android:text="@string/gender"/>

                    <TextView
                        android:id="@+id/gender"
                        style="@style/home_fragments_edittext"
                        android:background="@drawable/circleimg"
                        android:paddingRight="@dimen/five"
                        android:paddingLeft="@dimen/five"
                        android:gravity="center_vertical"
                        android:textColor="@color/blackColor"
                        android:hint="@string/gender"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/home_fragments_textview"
                        android:fontFamily="@font/raleway_black"

                        android:gravity="center_vertical|right"
                        android:text="@string/age"/>
                    <TextView
                        android:id="@+id/age"
                        style="@style/home_fragments_edittext"
                        android:background="@drawable/circleimg"
                        android:paddingRight="@dimen/five"
                        android:paddingLeft="@dimen/five"
                       android:gravity="center_vertical"
                        android:textColor="@color/blackColor"
                        android:hint="@string/age"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/home_fragments_textview"
                        android:fontFamily="@font/raleway_black"

                        android:gravity="center_vertical|right"
                        android:text="@string/birthday"/>
                    <TextView
                        android:id="@+id/birthday"
                        style="@style/home_fragments_edittext"
                        android:background="@drawable/circleimg"
                        android:paddingRight="@dimen/five"
                        android:paddingLeft="@dimen/five"
                        android:gravity="center_vertical"
                        android:textColor="@color/blackColor"
                        android:hint="@string/birthday"/>
                </LinearLayout>
