<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteen"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_popup_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="language"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/twenty"/>
        <LinearLayout
            android:id="@+id/ll_displayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:background="@drawable/login_button_nobgcolor">
            <Spinner
                android:id="@+id/spinner_language"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thirty_five"
                android:spinnerMode="dropdown"
                android:textColor="@color/blackColor"
                android:background="@drawable/circleimg"
                android:popupBackground="@color/whiteColor"
                android:backgroundTint="@color/whiteColor"
                android:dropDownSelector="@color/colorPrimary"
                android:dropDownHorizontalOffset="-5dp"
                android:dropDownVerticalOffset="@dimen/thirty_five"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_four"
        android:layout_marginBottom="@dimen/fifteen"
        android:gravity="center">
        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/whiteColor"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/shape"
            android:text="ok"/>
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/whiteColor"
            android:textSize="20dp"
            android:background="@drawable/shape"
            android:text="cancel"/>
        <TextView
            android:id="@+id/btn_quit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blackDarkColor"
            android:textSize="20dp"
            android:text="quit"
            android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>